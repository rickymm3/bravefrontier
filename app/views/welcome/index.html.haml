%div.news_list
  %ul
    -@news.order('created_at DESC').each do |news|
      %div.news_item
        %li
          %h4
            = news.heading.html_safe
          =image_tag  "#{news.image_loc}", :class => "news-img"
          %div.news_body
            =news.body.html_safe
        %div.time
          =news.created_at.strftime("%b %d %Y")
          by
          = User.find(news.user_id).profile.username.humanize